{
	"include": ["src/**/*"],
	"exclude": [
		"lib/",
		"old/",
		"benchmarks/",
		"node_modules",
		"src/tests/",
		"**/*.test.ts"
	],
	"compilerOptions": {
		"outDir": "lib/",
		"rootDir": "src/",
		"incremental": true,
		"target": "esnext",
		"lib": ["es6", "es2017"],
		"allowJs": true,
		"isolatedModules": true,
		"strict": true,
		"moduleResolution": "node",
		"typeRoots": ["./typings", "node_modules/@types"],
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true
	}
}
